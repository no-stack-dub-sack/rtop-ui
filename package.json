{
  "name": "rtop",
  "version": "0.1.0",
  "scripts": {
    "bs:build": "bsb -make-world",
    "bs:start": "bsb -make-world -w",
    "bs:clean": "bsb -clean-world",
    "test": "jest",
    "build": "bsb -make-world && NODE_ENV=production webpack && cp public/* build",
    "deploy": "now build && now alias",
    "staging": "npm run build && now build && now alias staging.rtop.khoanguyen.me",
    "start:terminal": "TERMINAL_UI=1 webpack-dev-server",
    "start": "webpack-dev-server",
    "server": "node ./server/Server.bs.mjs",
    "server:watch": "nodemon -e js ./server/entry.js",
    "ci:build": "bsb -clean-world && npm run build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@glennsl/bs-json": "^2.0.0",
    "@thangngoc89/ocaml-re": "^1.0.0",
    "bs-css": "^7.0.1",
    "bs-express": "^0.8.0",
    "bs-json": "^1.0.1",
    "bs-sql-composer": "^3.2.1",
    "bs-webapi": "^0.10.0",
    "codemirror": "^5.39.2",
    "comlink": "^3.0.3",
    "cors": "^2.8.4",
    "esm": "^3.0.72",
    "express": "^4.16.3",
    "install": "^0.12.1",
    "knex": "^0.15.2",
    "morgan": "^1.9.0",
    "nanoid": "^1.1.0",
    "npm": "^6.2.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-textarea-autosize": "^7.0.3",
    "reason-react": "^0.4.2",
    "sqlite3": "^4.0.2"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.2",
    "babel-jest": "^23.4.0",
    "babel-preset-env": "^1.7.0",
    "bs-platform": "^4.0.1",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "react-hot-loader": "^3.1.3",
    "style-loader": "^0.21.0",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0",
    "worker-loader": "^2.0.0",
    "workerize-loader": "^1.0.3"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!@glennsl|@thangngoc89|bs-platform)",
      "/public/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{re,rei}": [
      "refmt --in-place",
      "git add"
    ]
  }
}
